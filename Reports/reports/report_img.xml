<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <template id="text_report_dic_img_id">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <style>
                        .p1{
                        margin-top:-20px;
                        font-size:12px;
                        font-weight:700;

                        }
                        span{
                        margin-top:-20px;
                        font-size:12px;
                        font-weight:normal;
                        }
                        <!--                        .p2{-->
                        <!--                        margin-top:-20px;-->
                        <!--                        font-size:12px;-->


                        <!--                        }-->
                        .pcen{
                        float:right;
                        font-width:bold;
                        }
                        .r1{
                        border:1px solid
                        }
                        .div_headings {
                        border:1px solid;
                        text-align: center;
                        font-size:12px;
                        margin-top:2em;
                        vertical-align:middle;
                        }
                        .div_tb {
                        border:1px solid;
                        text-align: center;
                        font-size:10px;
                        <!--                        margin-top:2em;-->
                        <!--                        vertical-align:middle;-->
                        }
                        table tr{
                        <!--                        height:10%;-->
                        }

                    </style>


                    <div class="container">
                        <div class="container">
                            <div class="row">
                                <div class="col-9">
                                    <p class="p1">Reference :
                                        <span class='p2' t-field="o.name"/>
                                    </p>
                                    <p class="p1">Customer :
                                        <span class='p2' t-field="o.partner_id.name"/>
                                    </p>
                                    <p class="p1">Address :
                                        <span class='p2' t-field="o.address"/>
                                    </p>
                                    <p class="p1">Contact :
                                        <span class='p2' t-field="o.mobile_no"/>
                                    </p>
                                    <p class="p1">CNIC :</p>
                                    <p class="p1">NTN :</p>
                                </div>
                                <div class="col-3 ">
                                    <p class="p1">Date :
                                        <span class='p2' t-field="o.date_order"/>
                                    </p>
                                    <p class="p1">Validity :
                                        <span class='p2' t-field="o.validity_date"/>
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class="container">
                            <table class="table table-bordered table-sm" style="margin-top:5px;">

                                <tr style="font-size:12px;text-align:center;">
                                    <th>
                                        <strong>Sr</strong>
                                    </th>
                                    <th>
                                        <strong>Item Description</strong>
                                    </th>
                                    <th>
                                        <strong>Image</strong>
                                    </th>
                                    <th>
                                        <strong>Article</strong>
                                    </th>
                                    <th>
                                        <strong>Finish</strong>
                                    </th>
                                    <th class="text-center div_headings">
                                        <strong>Unit</strong>
                                    </th>
                                    <th>
                                        <strong>Quantity</strong>
                                    </th>
                                    <th>
                                        <strong>Rate</strong>
                                    </th>
                                    <th class="text-center div_headings">
                                        <strong>Amount</strong>
                                    </th>
                                </tr>

                                <tbody>
                                    <t t-set="count_id" t-value="0"/>
                                    <t t-set="current_subtotal" t-value="0"/>

                                    <t t-foreach="o.order_line" t-as="line">
                                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"
                                           groups="account.group_show_line_subtotals_tax_excluded"/>
                                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_total"
                                           groups="account.group_show_line_subtotals_tax_included"/>

                                        <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''"
                                            style="text-align:center;">
                                            <t t-if="not line.display_type">
                                                <t t-set="count_id" t-value="count_id+1"/>
                                                <td name="td_id" class="text-center"
                                                    style="padding:0px; height:0%; font-size:9px;">
                                                    <t t-esc="count_id"/>
                                                </td>
                                                <td class="div_tb" style="padding:0px; height:0%;">
                                                    <span t-field="line.product_id.name"/>
                                                </td>
                                                <td>
                                                    <img t-if="line.image_128"
                                                         t-att-src="'data:image/png;base64,%s' % to_text(line.image_128)"
                                                         style="width: 90%"/>
                                                </td>
                                                <td class="div_tb" style="padding:0px; height:0%;">
                                                    <span t-field="line.article_no"/>
                                                </td>
                                                <td class="div_tb" style="padding:0px; height:0%;">
                                                    <span t-field="line.finish_no"/>
                                                </td>
                                                <td class="div_tb" style="padding:0px; height:0%;">
                                                    <span t-field="line.price_unit"/>
                                                </td>
                                                <td class="div_tb" style="padding:0px; height:0%;">
                                                    <span t-field="line.product_uom_qty"/>
                                                </td>
                                                <td class="div_tb" style="padding:0px; height:0%;">
                                                    <span t-field="line.product_id.list_price"/>
                                                </td>
                                                <td class="div_tb" style="padding:0px; height:0%;">
                                                    <t t-set="net_payable"
                                                       t-value="(o.amount_untaxed + o.amount_discount)"/>
                                                    <t t-esc="net_payable"/>
                                                    <!--                                                    <span t-field="line.price_subtotal"/>-->
                                                </td>
                                            </t>
                                            <t t-if="line.display_type == 'line_section'">
                                                <td class="div_tb"
                                                    style="padding:0px; height:0%; background-color: black; color: white;"
                                                    name="td_section_line" colspan="99">
                                                    <span t-field="line.name"/>
                                                </td>
                                                <t t-set="current_section" t-value="line"/>
                                                <t t-set="current_subtotal" t-value="0"/>
                                            </t>
                                            <t t-if="line.display_type == 'line_note'">
                                                <td name="td_note_line" colspan="99" class="div_tb"
                                                    style="padding:0px; height:0%;">
                                                    <span t-field="line.name"/>
                                                </td>
                                            </t>
                                        </tr>
                                        <div>
                                            <t t-if="current_section and (line_last or o.order_line[line_index+1].display_type == 'line_section')">
                                                <tr class=" text-right" style="padding:0;">

                                                    <td name="td_section_subtota1l" colspan="99" style="padding:0;">
                                                        <strong style="padding-right:240px; font-size:13px;"
                                                                class="mr16">Subtotal:
                                                        </strong>
                                                        <span
                                                                t-esc="current_subtotal"
                                                                t-options='{"widget": "monetary", "display_currency": o.pricelist_id.currency_id}'
                                                        />
                                                    </td>

                                                </tr>
                                            </t>
                                        </div>

                                    </t>
                                </tbody>
                            </table>

                            <div class="container">
                                <!--                                <div class="row justify-content-end" style="height:11px;margin-bottom:5px;">-->
                                <!--                                    <div class="col-3" style="font-size:13px;text-align:right;">-->
                                <!--                                        <p>Sub Total :</p>-->
                                <!--                                    </div>-->
                                <!--                                    <div class="col-3 ">-->
                                <!--                                        <p style="text-align:right;">-->
                                <!--                                            &lt;!&ndash;                                            <span t-field="o.amount_untaxed"/>&ndash;&gt;-->
                                <!--                                        </p>-->
                                <!--                                    </div>-->
                                <!--                                </div>-->
                            </div>
                            <div class="container">
                                <div class="row justify-content-end" style="height:11px;margin-bottom:15px;">
                                    <div class="col-3" style="font-size:13px;text-align:right;">
                                        <p>Grand Total :</p>
                                    </div>
                                    <div class="col-3" style="margin-top:-7px;">
                                        <p style="text-align:right;">
                                            <t t-set="grand_total"
                                               t-value="(o.amount_untaxed + o.amount_discount)"/>
                                            <t t-esc="grand_total"/>
                                            <!--                                            <span t-field="o.amount_untaxed"/>-->
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="container">
                                <div class="row justify-content-end" style="height:11px;margin-bottom:15px;">
                                    <div class="col-3" style="font-size:13px;text-align:right;">
                                        <p>Freight :</p>
                                    </div>
                                    <div class="col-3  border-bottom" style="margin-top:-10px;">
                                        <p style="text-align:right;">
                                            <!--                                            <span t-raw="o.display_price"/>-->

                                            <!--                                            <span t-field="o.display_price"/>-->
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="container">
                                <div class="row justify-content-end" style="height:11px;margin-bottom:15px;">
                                    <div class="col-3" style="font-size:13px;text-align:right;">
                                        <p>Net Payable:</p>
                                    </div>
                                    <div class="col-3  border-bottom" style="margin-top:-5px;">
                                        <p style="text-align:right;">
                                            <t t-set="net_payable"
                                               t-value="(o.amount_untaxed+ o.amount_discount)"/>
                                            <t t-esc="net_payable"/>

                                            <!--                                            <span t-field="doc.amount_untaxed"/>-->
                                        </p>
                                    </div>
                                </div>
                            </div>

                            <br/>
                            <div class="container">
                                <div>
                                    <div class="col-12" style="padding-left:0px; margin-left:-10px;">
                                        <p style="font-weight:bold;color:black; font-size:13px;">Terms And Condition</p>
                                    </div>
                                </div>
                            </div>
                            <br/>
                        </div>
                        <div class="container row" style="margin-top:4em; font-size:15px;">
                            <div class="col-4">
                                __________________________________
                            </div>
                            <div class="col-4">
                                __________________________________
                            </div>
                            <div class="col-4">
                                __________________________________
                            </div>
                        </div>
                        <div class="container row" style="font-size:15px;">
                            <div class="col-4">
                                Sale Consultant
                            </div>
                            <div class="col-4">
                                Manager
                            </div>
                            <div class="col-4">
                                Customer
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>

<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <template id="report_with_dic_id">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <style>
                        .p1{
                        margin-top:-20px;
                        font-size:12px;
                        font-weight:700;

                        }
                        span{
                        margin-top:-20px;
                        font-size:12px;
                        font-weight:normal;
                        }
                        <!--                        .p2{-->
                        <!--                        margin-top:-20px;-->
                        <!--                        font-size:12px;-->


                        <!--                        }-->
                        .pcen{
                        float:right;
                        font-width:bold;
                        }
                        .r1{
                        border:1px solid
                        }
                        .div_headings {
                        border:1px solid;
                        text-align: center;
                        font-size:12px;
                        margin-top:2em;
                        vertical-align:middle;
                        }
                        .div_tb {
                        border:1px solid;
                        text-align: center;
                        font-size:10px;
                        <!--                        margin-top:2em;-->
                        <!--                        vertical-align:middle;-->
                        }
                        table tr{
                        <!--                        height:10%;-->
                        }

                    </style>


                    <div class="container">
                        <div class="container">
                            <div class="row">
                                <div class="col-9">
                                    <p class="p1">Reference :
                                        <span class='p2' t-field="o.name"/>
                                    </p>
                                    <p class="p1">Customer :
                                        <span class='p2' t-field="o.partner_id.name"/>
                                    </p>
                                    <p class="p1">Address :
                                        <span class='p2' t-field="o.address"/>
                                    </p>
                                    <p class="p1">Contact :
                                        <span class='p2' t-field="o.mobile_no"/>
                                    </p>
                                    <p class="p1">CNIC :
                                        <!--                                        <span class="p2" t-field="o.partner_id.vat"/>-->
                                    </p>
                                    <p class="p1">NTN :
                                        <span class="p2" t-field="o.partner_id.vat"/>

                                    </p>
                                </div>
                                <div class="col-3 ">
                                    <p class="p1">Date :
                                        <span class='p2' t-field="o.date_order"/>
                                    </p>
                                    <p class="p1">Validity :
                                        <span class='p2' t-field="o.validity_date"/>
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class="container">
                            <table class="table table-bordered table-sm" style="margin-top:5px;">

                                <tr style="font-size:12px;text-align:center;">
                                    <th>
                                        <strong>Sr</strong>
                                    </th>
                                    <th>
                                        <strong>Item Description</strong>
                                    </th>
                                    <th>
                                        <strong>Article</strong>
                                    </th>
                                    <th>
                                        <strong>Finish</strong>
                                    </th>
                                    <th class="text-center div_headings">
                                        <strong>Unit</strong>
                                    </th>
                                    <th>
                                        <strong>Quantity</strong>
                                    </th>
                                    <th>
                                        <strong>Rate</strong>
                                    </th>
                                    <th class="text-center div_headings">
                                        <strong>Amount</strong>
                                    </th>
                                    <th class="text-center div_headings">
                                        <strong>Dis%</strong>

                                    </th>
                                </tr>

                                <tbody>
                                    <t t-set="count_id" t-value="0"/>
                                    <t t-set="current_subtotal" t-value="0"/>

                                    <t t-foreach="o.order_line" t-as="line">
                                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"
                                           groups="account.group_show_line_subtotals_tax_excluded"/>
                                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_total"
                                           groups="account.group_show_line_subtotals_tax_included"/>

                                        <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''"
                                            style="text-align:center;">
                                            <t t-if="not line.display_type">
                                                <t t-set="count_id" t-value="count_id+1"/>
                                                <td name="td_id" class="text-center"
                                                    style="padding:0px; height:0%; font-size:9px;">
                                                    <t t-esc="count_id"/>
                                                </td>
                                                <td class="div_tb" style="padding:0px; height:0%;">
                                                    <span t-field="line.product_id.name"/>
                                                </td>
                                                <td class="div_tb" style="padding:0px; height:0%;">
                                                    <span t-field="line.article_no"/>
                                                </td>
                                                <td class="div_tb" style="padding:0px; height:0%;">
                                                    <span t-field="line.finish_no"/>
                                                </td>
                                                <td class="div_tb" style="padding:0px; height:0%;">
                                                    <span t-field="line.price_unit"/>
                                                </td>
                                                <td class="div_tb" style="padding:0px; height:0%;">
                                                    <span t-field="line.product_uom_qty"/>
                                                </td>
                                                <td class="div_tb" style="padding:0px; height:0%;">
                                                    <span t-field="line.product_id.list_price"/>
                                                </td>
                                                <td class="div_tb" style="padding:0px; height:0%; font-size:12px; vertical-align:middle;">
                                                    <t t-set="net_payable"
                                                       t-value="(line.product_id.list_price * line.product_uom_qty)"/>
                                                    <t t-esc="net_payable"/>
                                                    <!--                                                    <span t-field="line.price_subtotal"/>-->
                                                </td>
                                                <td class="div_tb" style="padding:0px; height:0%">
                                                    <span t-field="line.discount" t-options='{"widget": "float", "precision": 2}'></span>

                                                </td>
                                            </t>
                                            <t t-if="line.display_type == 'line_section'">
                                                <td class="div_tb"
                                                    style="padding:0px; height:0%; background-color: black; color: white; text-align:left; text-transform:uppercase;font-weight:bold; padding-left:35px;"
                                                    name="td_section_line" colspan="99">
                                                    <span  t-field="line.name"/>
                                                </td>
                                                <t t-set="current_section" t-value="line"/>
                                                <t t-set="current_subtotal" t-value="0"/>
                                            </t>
                                            <t t-if="line.display_type == 'line_note'">
                                                <td name="td_note_line" colspan="99" class="div_tb"
                                                    style="padding:0px; height:0%;">
                                                    <span t-field="line.name"/>
                                                </td>
                                            </t>
                                        </tr>

                                        <t t-if="current_section and (line_last or o.order_line[line_index+1].display_type == 'line_section')">
                                            <tr class=" text-right" style="padding:0;">

                                                <td name="td_section_subtota1l" colspan="99" style="padding:0;">
                                                    <strong style="padding-right:240px; font-size:13px;" class="mr16">
                                                        Subtotal:
                                                    </strong>
                                                    <span style="padding-right:25px;"
                                                          t-esc="current_subtotal"
                                                          t-options='{"widget": "float", "precision": 0}'
                                                    />
                                                </td>
                                            </tr>
                                        </t>
                                    </t>
                                </tbody>
                            </table>

                            <div class="container">
                                <!--                                <div class="row justify-content-end" style="height:11px;margin-bottom:5px;">-->
                                <!--                                    <div class="col-3" style="font-size:13px;text-align:right;">-->
                                <!--                                        <p>Sub Total :</p>-->
                                <!--                                    </div>-->
                                <!--                                    <div class="col-3 ">-->
                                <!--                                        <p style="text-align:right;">-->
                                <!--                                            &lt;!&ndash;                                            <span t-field="o.amount_untaxed"/>&ndash;&gt;-->
                                <!--                                        </p>-->
                                <!--                                    </div>-->
                                <!--                                </div>-->
                            </div>
                            <div class="container">
                                <div class="row justify-content-end" style="height:11px;margin-bottom:15px;">
                                    <div class="col-3" style="font-size:13px;text-align:right;">
                                        <p style="font-weight:bold;">Grand Total :</p>
                                    </div>
                                    <div class="col-3" style="margin-top:-10px;">
                                        <p style="text-align:right; font-weight:bold; font-size:12px; padding-top:10px;">
                                            <t t-set="grand_total"
                                               t-value="(o.amount_untaxed + o.amount_discount)"/>
                                            <t t-esc="grand_total"/>
<!--                                                                                        <span t-field="o.amount_untaxed"/>-->
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="container">
                                <div class="row justify-content-end" style="height:11px;margin-bottom:15px;">
                                    <div class="col-3" style="font-size:13px;text-align:right;">
                                        <p style="font-weight:bold;">Discount :</p>
                                    </div>
                                    <div class="col-3  border-bottom" style="margin-top:-10px;">
                                        <p style="text-align:right; font-weight:bold;">
                                            <span t-field="o.amount_discount" t-options='{"widget": "float", "precision": 2}'/>
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="container">
                                <div class="row justify-content-end" style="height:11px;margin-bottom:15px;">
                                    <div class="col-3" style="font-size:13px;text-align:right;">
                                        <p style="font-weight:bold;">Net Payable:</p>
                                    </div>
                                    <div class="col-3  border-bottom" style="margin-top:-5px;">
                                        <p style="text-align:right; font-size:12px; font-weight:bold;">
                                            <t t-set="net_payable"
                                               t-value="(grand_total - o.amount_discount)"/>
                                            <t t-esc="net_payable"/>
                                            <!--                                            <t t-set="net_payable"-->
                                            <!--                                               t-value="(o.amount_untaxed - o.amount_discount)"/>-->
                                            <!--                                            <t t-esc="net_payable"/>-->
                                            <!--                                            <span t-field="o.amount_untaxed-o.amount_discount "/>-->
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="container">
                                <div class="row justify-content-end" style="height:11px;margin-bottom:15px;">
                                    <div class="col-3" style="font-size:13px;text-align:right;">
                                        <p style="font-weight:bold;">Freight:</p>
                                    </div>
                                    <div class="col-3  border-bottom">
                                        <p style="text-align:right; font-weight:bold;">
                                            <!--                                            <span t-field="o.display_price"/>-->
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="container">
                                <div class="row justify-content-end" style="height:11px;margin-bottom:15px;">
                                    <div class="col-3" style="font-size:13px;text-align:right;">
                                        <p style="font-weight:bold;">Balance:</p>
                                    </div>
                                    <div class="col-3  border-bottom">
                                        <p style="text-align:right; font-weight:bold;">
                                            <!--                                            <span t-field="doc.amount_untaxed"/>-->
                                        </p>
                                    </div>
                                </div>
                            </div>

                            <br/>
                            <div class="container">
                                <div>
                                    <div class="col-12" style="padding-left:0px; margin-left:-10px;">
                                        <p style="font-weight:bold;color:black; font-size:13px;">Terms And Condition</p>
                                    </div>
                                </div>
                                <div>
                                    <span t-field="o.note"/>
                                </div>
                            </div>
                            <br/>
                        </div>
                        <div class="container row" style="margin-top:4em; font-size:15px;">
                            <div class="col-4">
                                _______________________________
                            </div>
                            <div class="col-4">
                                _______________________________
                            </div>
                            <div class="col-4">
                                _______________________________
                            </div>
                        </div>
                        <div class="container row" style="font-size:15px;">
                            <div class="col-4">
                                Sale Consultant
                            </div>
                            <div class="col-4">
                                Manager
                            </div>
                            <div class="col-4">
                                Customer
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
